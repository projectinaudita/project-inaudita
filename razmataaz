<body>
  <div class="golden-particles" id="particles"></div>
  
  <div class="container">
    <h1 id="question">Are you lonely?</h1>
    <div class="buttons" id="buttons">
      <button class="btn" onclick="answerYes()">Yes</button>
      <button class="btn" onclick="answerNo()">No</button>
    </div>
  </div>

  <script>
  let step = 0;
  let isTransitioning = false;

  // Create golden particles
  function createGoldenParticle() {
    const particle = document.createElement('div');
    particle.className = 'particle';
    particle.style.left = Math.random() * 100 + '%';
    particle.style.animationDelay = Math.random() * 12 + 's';
    particle.style.animationDuration = (8 + Math.random() * 8) + 's';

    const size = 2 + Math.random() * 3;
    particle.style.width = size + 'px';
    particle.style.height = size + 'px';

    document.getElementById('particles').appendChild(particle);
    setTimeout(() => {
      if (particle.parentNode) particle.parentNode.removeChild(particle);
    }, 20000);
  }

  setInterval(createGoldenParticle, 800);

  function answerYes() {
    if (isTransitioning) return;
    isTransitioning = true;

    const container = document.querySelector('.container');
    container.classList.add('midas-exit');

    for (let i = 0; i < 20; i++) {
      setTimeout(() => createGoldenParticle(), i * 50);
    }

    setTimeout(() => {
      window.location.href = 'voicememo.html';
    }, 1800);
  }

 function answerNo() {
  if (isTransitioning) return;
  isTransitioning = true;

  const question = document.getElementById('question');
  question.classList.add('question-golden-transition');

  setTimeout(() => {
    if (step === 0) {
      question.textContent = "Or maybe you just have fake friends?";
      step++;
      question.classList.remove('question-golden-transition');
      isTransitioning = false;
    } else {
      // Try to close the window
      window.open('', '_self', '');
      window.close();

      // Fallback: if tab doesn’t close, redirect to goodbye page
      setTimeout(() => {
        window.location.href = 'goodbye.html';  // Optional: make this eerie/fade out
      }, 2000);
    }
  }, 600);
}


  for (let i = 0; i < 10; i++) {
    setTimeout(() => createGoldenParticle(), i * 200);
  }
</script>

